<GuiXml>
	<Controls>
		<TopLevelControl name="QuestLogUI" mouseEnabled="true" movable="true" >
			<Dimensions x="450" y="250" />
			<Anchor point="CENTER" offsetY="-200" />
			
			<Controls>
				<Backdrop name="$(parent)Backdrop" edgeColor="444444" centerColor="222222" alpha="0.8" >
					<AnchorFill />
					<Edge edgeSize="2" />
				</Backdrop>
				<Label name="$(parent)Label" font="ZoFontGameLargeBoldShadow" color="C5C29E" wrapmode="ELLIPSIS"
					text="|c70C0DE[QuestLog]|r info:&#xD;&#xA;The UI has to be reloaded in order to save the log file instantly. Normally the file is written when logging out, but if the game crashes before that, all logging of the current session would lost. (You can also manually reload the UI with the chat command |cFFFF00/reloadui|r)">
					<Dimensions x="440" y="240" />
					<Anchor point="CENTER" />
				</Label>
				<Label name="$(parent)CountdownLabel" font="ZoFontGameLargeBoldShadow" color="C5C29E" wrapmode="ELLIPSIS"
					text="Reloading UI in |cFF0000XX|r s">
					<Anchor point="CENTER" offsetY="40" />
				</Label>
				<Button name="$(parent)ButtonReload" inherits="ZO_DefaultButton" text="Reload now">
					<Anchor point="BOTTOMLEFT" offsetX="20" offsetY="-20" />
					<Dimensions x="150" y="24" />
					<OnClicked>
						QuestLog.OnButtonReloadClicked()
					</OnClicked>
				</Button>
				<Button name="$(parent)ButtonCancel" inherits="ZO_DefaultButton" text="Cancel">
					<Anchor point="BOTTOMRIGHT" offsetX="-20" offsetY="-20" />
					<Dimensions x="150" y="24" />
					<OnClicked>
						QuestLog.OnButtonCancelClicked()
					</OnClicked>
				</Button>
			</Controls>
		</TopLevelControl>
		
		<TopLevelControl name="QuestLogTimerUI" >
			<OnUpdate>
				QuestLog.timer.OnUpdate()
			</OnUpdate>
		</TopLevelControl>
	</Controls>
</GuiXml>